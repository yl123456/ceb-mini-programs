page {
  background-color: whitesmoke;
}

.container {
  font-size: 14px;
  display: flex;
  flex-direction: column;
}

.sign {
  height: auto;
  padding: 15px;
  display: flex;
  background: white;
  flex-direction: row;
  margin-bottom: 10px;
}

.sign-text {
  display: flex;
  flex-direction: column;
}

.sign button {
  height: 35px;
  line-height: 35px;
  width: 80px;
  background-color: white;
  border: 1px solid red;
  color: red;
  text-align: center;
}

.right {
  position: absolute;
  right: 15px;
}

.tabs {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: white;
  padding: 10rpx;
}

.tabs-item {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding:10rpx 0;
}

.tabs-item image {
  width: 64rpx;
  height:64rpx;
  margin: auto;
  text-align: center;
}

.list-item-bg{
  display: flex;
  flex-direction: column;
  background: white;
  padding: 15rpx;
  margin-top: 10px;
}

.banner-img{
 width: 100%;
 height: 100%;
}

.video{
  width: 100%;
  height: 200px;
  margin-top: 10px;
}
